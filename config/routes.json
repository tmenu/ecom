{
    "home.index": {
        "regex": "/",
        "controller": "Home",
        "action": "index"
    },



    "product.index": {
        "regex": "/produits.html",
        "controller": "Product",
        "action": "index"
    },

    "product.show": {
        "regex": "/produits/(:name)-(:id).html",
        "controller": "Product",
        "action": "show",
        "params": {
            ":name": "[a-z0-9]+",
            ":id":   "[0-9]+"
        }
    },

    "product.add": {
        "regex": "/produits/ajouter.html",
        "controller": "Product",
        "action": "add"
    },

    "product.edit": {
        "regex": "/produits/editer-(:name)-(:id).html",
        "controller": "Product",
        "action": "edit",
        "params": {
            ":name": "[a-z0-9-]+",
            ":id":   "[0-9]+"
        }
    },

    "product.delete": {
        "regex": "/produits/supprimer-(:name)-(:id).html",
        "controller": "Product",
        "action": "delete",
        "params": {
            ":name": "[a-z0-9-]+",
            ":id":   "[0-9]+"
        }
    },




    "client.index": {
        "regex": "/clients.html",
        "controller": "Client",
        "action": "index"
    },

    "client.add": {
        "regex": "/client/add.html",
        "controller": "Client",
        "action": "add"
    },

    "client.edit": {
        "regex": "/client/edit/(:name)-(:id).html",
        "controller": "Client",
        "action": "edit",
        "params": {
            ":name": "[a-z]+",
            ":id":   "[1-9]+"
        }
    },

    "client.delete": {
        "regex": "/client/delete/(:name)-(:id).html",
        "controller": "Client",
        "action": "delete",
        "params": {
            ":name": "[a-z]+",
            ":id":   "[1-9]+"
        }
    },


    "contact.index": {
        "regex": "/contact.html",
        "controller": "Home",
        "action": "index"
    } 
}