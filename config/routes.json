{
    "home.index": {
        "regex": "/",
        "controller": "Home",
        "action": "index"
    },

    "product.index": {
        "regex": "/produits.html",
        "controller": "Product",
        "action": "index"
    },

    "product.show": {
        "regex": "/product/(:name)-(:id).html",
        "controller": "Product",
        "action": "index",
        "params": {
            ":name": "[a-z]+",
            ":id":   "[1-9]+"
        }
    },

    "client.index": {
        "regex": "/clients.html",
        "controller": "Client",
        "action": "index"
    },

    "contact.index": {
        "regex": "/contact.html",
        "controller": "Home",
        "action": "index"
    } 
}