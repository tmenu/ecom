{
    "_comment": " --- FRONTEND --- ",

        "_comment": "Home controller",

            "base": {
                "regex": "/",
                "application": "Frontend",
                "controller": "Home",
                "action": "index"
            },

            "frontend.home.index": {
                "regex": "/accueil.html",
                "application": "Frontend",
                "controller": "Home",
                "action": "index"
            },


        "_comment": " --- User controller",

            "frontend.user.login": {
                "regex": "/connexion.html",
                "application": "Frontend",
                "controller": "User",
                "action": "login"
            },

            "frontend.user.logout": {
                "regex": "/deconnexion.html",
                "application": "Frontend",
                "controller": "User",
                "action": "logout"
            },

            "frontend.user.signup": {
                "regex": "/inscription.html",
                "application": "Frontend",
                "controller": "User",
                "action": "signup"
            },


    "_comment": "BACKEND",

        "_comment": "Product controller",

            "backend.product.index": {
                "regex": "/produits.html",
                "application": "Backend",
                "controller": "Product",
                "action": "index"
            },

            "backend.product.show": {
                "regex": "/produits/details/(:name)-(:id).html",
                "application": "Backend",
                "controller": "Product",
                "action": "show",
                "params": {
                    ":name": "[a-z0-9]+",
                    ":id":   "[0-9]+"
                }
            },

            "backend.product.add": {
                "regex": "/produits/ajouter.html",
                "application": "Backend",
                "controller": "Product",
                "action": "add"
            },

            "backend.product.edit": {
                "regex": "/produits/editer/(:name)-(:id).html",
                "application": "Backend",
                "controller": "Product",
                "action": "edit",
                "params": {
                    ":name": "[a-z0-9-]+",
                    ":id":   "[0-9]+"
                }
            },

            "backend.product.delete": {
                "regex": "/produits/supprimer/(:name)-(:id).html",
                "application": "Backend",
                "controller": "Product",
                "action": "delete",
                "params": {
                    ":name": "[a-z0-9-]+",
                    ":id":   "[0-9]+"
                }
            },


        "_comment": "Client controller",

            "backend.client.index": {
                "regex": "/clients.html",
                "application": "Backend",
                "controller": "Client",
                "action": "index"
            },

            "backend.client.add": {
                "regex": "/client/ajouter.html",
                "application": "Backend",
                "controller": "Client",
                "action": "add"
            },

            "backend.client.edit": {
                "regex": "/client/editer/(:name)-(:id).html",
                "application": "Backend",
                "controller": "Client",
                "action": "edit",
                "params": {
                    ":name": "[a-z0-9]+",
                    ":id":   "[0-9]+"
                }
            },

            "backend.client.delete": {
                "regex": "/client/supprimer/(:name)-(:id).html",
                "application": "Backend",
                "controller": "Client",
                "action": "delete",
                "params": {
                    ":name": "[a-z0-9]+",
                    ":id":   "[0-9]+"
                }
            },


        "_comment": "Contact controller",

            "backend.contact.index": {
                "regex": "/contact.html",
                "application": "Backend",
                "controller": "Home",
                "action": "index"
            } 
}